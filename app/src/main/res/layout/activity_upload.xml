<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UploadActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Current Status"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/openFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Folder where files are stored"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/openLast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume where you saved last"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/openFolder" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/openLast"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                app:srcCompat="@drawable/ic_baseline_skip_previous_24" />

            <Button
                android:id="@+id/editTags"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Edit Tags" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/ic_baseline_skip_next_24" />
        </FrameLayout>


        <Spinner
            android:id="@+id/categoriesSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:tag="#FFFFFF"
                android:text="White"
                android:layout_marginEnd="100dp"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#C0C0C0"
                android:tag="#C0C0C0"
                android:text="Silver"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#808080"
                android:tag="#808080"
                android:text="Gray"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="@color/black"
                android:tag="#000000"
                android:text="Black"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#FF0000"
                android:tag="#FF0000"
                android:text="Red"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#800000"
                android:tag="#800000"
                android:text="Maroon"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#FFFF00"
                android:tag="#FFFF00"
                android:text="Yellow"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#808000"
                android:tag="#808000"
                android:text="Olive"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#00FF00"
                android:tag="#00FF00"
                android:text="Lime"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#008000"
                android:tag="#008000"
                android:text="Green"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#00FFFF"
                android:tag="#00FFFF"
                android:text="Aqua"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#008080"
                android:tag="#008080"
                android:text="Teal"
                android:textColor="@color/black" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#0000FF"
                android:tag="#0000FF"
                android:text="Blue"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#000080"
                android:tag="#000080"
                android:text="Navy"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#FF00FF"
                android:tag="#FF00FF"
                android:text="Fushsia"
                android:textColor="@color/white" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:background="#800080"
                android:tag="#800080"
                android:text="Purple"
                android:textColor="@color/white" />






        </RadioGroup>

        <Button
            android:id="@+id/saveData"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Save Data" />
    </LinearLayout>
</ScrollView>